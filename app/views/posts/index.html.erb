<div class="container">
  <h1 class="mt-5">Коллективный блог</h1>


    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-12 mt-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.body %></p>
              <p class="text-muted small">
                <%= post.user.email %>
                <%= post.user.created_at %>
              </p>
            </div> 
          </div> 
        </div> 
      <% end %>
    </div>
</div>
