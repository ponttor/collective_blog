.container
  h1.mt-5
    = t('title')
  .row
    - @posts.each do |post|
      .col-12.mt-3
        .card
          .card-body
            .card-title
              = link_to post.title, post, class: "h5 link-dark text-decoration-none"
      p.card-text
        = post.body
      p.text-muted.small
        = "#{t('like_count')}: #{post.likes.count}"
        = distance_of_time_in_words_to_now(post.created_at, highest_measure_only: true)
        = post.creator.email
