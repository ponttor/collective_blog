h2
  = t('sign_in')
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true, input_html: { autocomplete: 'email' }, label_html: { class: 'mt-2' }
    = f.input :password, required: true, input_html: { autocomplete: 'current-password' }, label_html: { class: 'mt-3' }
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, class: 'btn btn-success mt-4 btn-block', value: t('sign_in')
.mt-2
  = render 'devise/shared/links'
